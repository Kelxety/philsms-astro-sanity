---

export interface Props {
  path: string;
  isBlog: boolean;
}
const { path, isBlog } = Astro.props;
---

<footer class="mt-auto flex flex-col bg-transparent py-12 transition-colors">
  <div class="container mx-auto divide-gray-400 divide-opacity-50 px-6 pt-6">
    <div class="flex w-full flex-col items-center justify-between">
      <div class="pb-2">
        <a
          class="mt-6 flex rounded-lg"
          href="https://www.facebook.com/mobiliconinc"
          rel="noopener noreferrer"
          target="_blank"
        >
          <img
            src="/images/powered-by-vercel.svg"
            class="h-10 w-full"
            alt="Powered by MobiliconPH"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
